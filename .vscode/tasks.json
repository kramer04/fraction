{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ générer le fichier actif",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"src/*.cpp",
				"-std=c++20",
				"-I",
				"include",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-Wall",
				"-Wextra",
				"-O2"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {"kind":"build","isDefault": true},
			"detail": "compilateur : /usr/bin/g++"
		}
	]
}